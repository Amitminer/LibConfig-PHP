{
    "name": "amitxd/libconfig",
    "description": "A tool that helps you manage configuration files.",
    "scripts": {
        "analyze": "vendor/bin/phpstan analyze src"
    },
    "require": {
        "phpstan/phpstan": "^1.10.29",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/extension-installer": "^1.0",
        "symfony/yaml": "^6.3"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {"AmitxD\\LibConfig\\": "src/"}
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}